<!-- 優惠Modal -->
<div class="modal fade" id="discountModal" tabindex="-1" aria-labelledby="discountModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="discountModalLabel">優惠(須滿百方可使用)</h4>
                <button type="button" class="close discountClose" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <button class="btn px-3 py-2" data-toggle="modal" data-target="#ONdiscountModal"
                        id="discountAdd" v-on:click="hideModal">
                    新增優惠
                </button>
                <div class="discount-body">
                    <!-- 優惠內容 -->
                    <div class="noDiscount text-center my-5" v-if="product.length ==0">
                        <img src="~/Assets/Images/noDiscount.jpg" />
                        <h4 class="mt-0">無可用優惠卷</h4>
                    </div>
                    <div v-for="(discount,index) in product" class="discount-item d-flex my-3 py-3 justify-content-between">
                        <div>
                            <div class="discount-txt">{{discount.DiscountName}}</div>
                            <div>請於 {{discount.EndTime}} 前使用</div>
                        </div>
                        <label v-if="discount.DiscountMemberId != 0">
                            <input type="radio" name="dicountCheck" :value="discount.DiscountMemberId" class="d-none" v-on:click="selectDiscount(discount)"/>
                            <span>可選取</span>
                        </label>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn py-3 w-100" data-dismiss="modal" >完成</button>
            </div>
        </div>
    </div>
</div>

<!-- 新增優惠Modal -->
<div class="modal fade" id="ONdiscountModal" tabindex="-1" aria-labelledby="ONdiscountModalLabel" aria-hidden="true"
     data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close addDiscountClose" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="ONdiscount-body">
                    <h4 class="modal-title mb-3" id="ONdiscountModalLabel">是否有優惠序號？</h4>
                    <div class="discountError text-danger small ml-1"></div>
                    <input type="text" placeholder="新增優惠序號">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn py-3 w-100" onclick="inputDiscount()">套用</button>
            </div>
        </div>
    </div>
</div>