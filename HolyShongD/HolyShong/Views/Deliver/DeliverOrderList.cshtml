@model IEnumerable<OrderListViewModel>
@{
    Layout = "~/Views/Shared/_LayoutDeliver.cshtml";
}

<div class="orderGroup">

    <div class="row">
        <div class="col-12 mb-4">
            <h1 class="font-weight-bold passOrder mt-4">訂單</h1>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="row">
            <div class="col-12 text-center">
                <h3 class="font-weight-bold">尚無歷史訂單</h3>
                <img src="~/Assets/Images/goDeliver.png" />
            </div>
        </div>
    }



    @foreach (var order in Model)
    {
        <div class="row">
            <div class="col-12 historyItem mb-3 pb-3">
                <div class="imgDiv">
                    <img src="@order.RestaurantImg">
                </div>
                <div class="itemGroup">
                    <div class="historyStore d-flex">
                        <h3>@order.RestaurantName</h3>
                    </div>
                    <div class="itemTitleDiv">
                        <div class="itemTitle ">
                            @order.ProductCount 份餐點 • @order.DeliverDate
                        </div>
                    </div>
                    <ul>
                        @foreach (var item in order.ProductLists)
                        {
                            <li class="d-flex">
                                <div class="number border d-flex">
                                    @item.ProductQuantity
                                </div>
                                <div>
                                    <div>
                                        @item.ProductName
                                    </div>
                                    <span>
                                        @item.OrderOptions
                                    </span>
                                </div>
                            </li>
                        }
                    </ul>
                </div>
                @if (order.OrderStatus == 6)
                {
                    <div class="checkRes bgBlue text-light">
                        外送費：$ @order.DeliverFee
                    </div>
                }
                else
                {
                    <div class="checkRes bgYellow">
                        @Html.ActionLink("查看訂單", "UndoneOrderList", "Order", new { id = order.OrderId }, new { style = "color:#000;" });
                    </div>
                }

            </div>
        </div>
    }
</div>

