@model MarketViewModel
<main>
    <div class="unitContainer">
        <div class="row">
            <div class="col-12 eventTitleItem">
            <p class="p1">
<span class="eventTitle">@Model.EventTitle</span>

優惠期限為:@Model.EventStart-@Model.EventEnd

@Model.EventContent
            </p>
            </div>
        </div>
    </div>

    <div class="unitContainer">
        <div class="row row-cols-1  row-cols-lg-3 ">

            @foreach (var card in Model.eventRestaurants)
            {
                <!-- 卡片區塊 -->
                <div class="cardCol">
                    <div class="foodCard" style="cursor:pointer;">
                        <a href="~/store/restaurant/@card.StoreId" style="text-decoration:none;">
                            <div class="headline">
                                <img class="pic" src="@card.RestaurantImg">
                                <div class="dark"><i class="fas fa-moon"></i>已關閉</div>
                                @if (card.DiscountTag == true)
                                {
                                    <div class="Tag">活動</div>
                                }
                                
                            </div>
                            <div class="foodText">
                                <div class="shopNameandPoint">
                                    <div class="shopName">@card.RestaurantName</div>
                                    @if (card.RestaurantScore >= 1)
                                        {
                                            <div class="point">@card.RestaurantScore.ToString("#0.0")</div>                                   
                                        }
                                        else
                                        {
                                            <div class="point">-</div>
                                        }
                                </div>
                                @*<div class="TWD">
                                    <span class="ntd">@card.DeliveryFee</span>
                                    <div class="dotSpace"><span class="dot"> • </span></div>
                                    <span class="min">25–35 分鐘</span>
                                </div>*@
                            </div>
                        </a>
                    </div>
                    <div class="touchZone" style="cursor:pointer;">
                        <div class="favoriteHeart">
                            <div class="switchP" id="heart_@card.StoreId" onclick="clickChangeC(@card.StoreId,this.id)">
                              
                                    @if (card.isFavStore)
                                    {
                                        <!-- 實心 -->
                                        <i class="fas fa-heart hSolid"></i>
                                        @*<i class="fas fa-heart hSolid4hover"></i>*@
                                    }
                                    else
                                    {
                                        <!-- 空心 -->
                                        <i class="far fa-heart hEmpty"></i>
                                    }

                            </div>
                        </div>
                    </div>
                </div>
            }


        </div>
    </div>
</main>

