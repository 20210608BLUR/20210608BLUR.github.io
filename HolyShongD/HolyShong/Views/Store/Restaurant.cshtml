@model ProductViewModel
@{
    var aaa = Model.isFavStore;
}
<div id="app">
    <!-- top -->
    <div class="topTitle container-fluid">
        <div class="discount row">
            <div class="col-12">
                <a href="~/member/eatpass">使用優響方案可享$0外送費</a>
            </div>
        </div>
    </div>
    <!-- banner -->
    <div class="banner">
        <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
            <div class="carouselInner">
                <div class="carouselItem active">
                    <img class="d-block" src="@Model.StoreImg" alt="First slide">
                </div>
            </div>
        </div>
        <div class="bannerTxtBtn container">
            <div class="text">
                <h1>@Model.StoreName</h1>
                <img src="https://dkl8of78aprwd.cloudfront.net/ticket@3x.png" alt="">
                •
                <span class="starScore">score</span>
                <span class="comment">(21)</span>
            </div>
            <div class="timeHeartBtn">
                <!-- heart -->
                <span class="fa-stack fa-1x heart">
                  
                        <i class="fas fa-heart fa-stack-1x heartSolid" style='@(Model.isFavStore ? "" : "display: none;")'></i>
                  
                        <i class="far fa-heart fa-stack-1x heartEmpty"  style='@(Model.isFavStore ? "display: none;" :"")'></i>
                   


                </span>
            </div>
        </div>
    </div>
    <!--地址-->
    <div class="wrap container">
        <div class="address">
            <p>$ • @Model.StoreCategoryName</p>
            <p >
                @Model.StoreAddress •
                <div class="loadMore" data-toggle="modal" data-target="#more">顯示更多</div>
            </p>
        </div>
    </div>
    <!-- dataModal -->
    <div class="modal fade" id="more" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="dataModalContent modal-content">
                <div class="dataModalHeader">
                    <div class="imgClose">
                        <div type="button" data-dismiss="modal">
                            <span aria-hidden="true">
                                <i class="far fa-times-circle fa-3x"></i>
                            </span>
                        </div>
                        <div class="imgClosePic">
                            <img src="@Model.StoreImg">
                        </div>
                    </div>
                </div>
                <div class="dataModalBody accordion" id="accordionStore">
                    <div class="store-txt">
                        <h2 class="p-2">@Model.StoreName</h2>
                        <span class="pb-2 px-2">@Model.StoreCategoryName • $</span>
                    </div>
                    <div class="storeInfo map">
                        <div class="marker p-3 my-auto">
                            <i class="fas fa-map-marker-alt"></i>
                        </div>
                        <div class="textCenter">
                            @Model.StoreAddress
                        </div>
                    </div>
                    
                    <div class="storeInfo startTime" data-toggle="collapse" data-target="#collapseOpenTime" >
                        <div class="clock p-3 my-auto">
                            <i class="fas fa-clock"></i>
                        </div>
                        <div class="textCenter">營業時間</div>
                        <div class="plus p-3 my-auto">
                            <i class="fas fa-plus"></i>
                        </div>
                    </div>
                    <div id="collapseOpenTime" class="collapse" data-parent="#accordionStore">
                        <div class="supplyTime text-center">@Model.SupplyTimes</div>
                    </div>
                    <div class="storeInfo joinEats">
                        <div class="ticket p-3 my-auto">
                            <img src="https://dkl8of78aprwd.cloudfront.net/ticket@3x.png" alt="">
                        </div>
                        <div class="textCenter" onclick="location.href='@Url.Action("Eatpass", "Member")'">
                            使用優響方案可享$0外送費
                            <br>
                            <span>Join Eats Pass to save at this store</span>
                        </div>
                        <div class="arrow p-3 my-auto">
                            <i class="fas fa-chevron-right"></i>
                        </div>
                    </div>
                    <div class="storeInfo score">
                        <div class="star p-3 my-auto">
                            <i class="fas fa-star"></i>
                        </div>
                        <div class="textCenter">
                            <span class="starScore">score</span>
                            <span class="comment">(21筆評分)</span>
                        </div>
                        <div class="space p-3 my-auto"></div>
                    </div>
                    <div class="storeInfo py-4 text-center">
                        [本店開立紙本發票]
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- navbar -->
    <div class="container position-relative">
        <div class="navMove row">
            <div class="col-12">
                <div class="navbar">
                    @foreach (var cate in Model.StoreProductCategories)
                    {
                        <a href="#title_@cate.StoreProductCategorySort">@cate.StoreProductCategoryName</a>

                     }
                </div>
            </div>
        </div>

        @foreach (var storeProductCategory in Model.StoreProductCategories)
        {
            <!-- 丼飯 -->
            <div class="title row">
                <div class="col-12">
                    <div class="txt" id="title_@storeProductCategory.StoreProductCategorySort">@storeProductCategory.StoreProductCategoryName</div>
                </div>
            </div>

            <div class="itemGroup row d-flex">
                @foreach (var storeProduct in storeProductCategory.StoreProducts)
                {
                    <div class="cardProduct col-12 col-lg-12 col-xl-4" data-toggle="modal" data-target="#a_@storeProduct.ProductId" data-id="@storeProduct.ProductId">
                        <div class="card d-flex flex-row-reverse card d-flex flex-row-reverse">
                            @if (storeProduct.ProductImg != null)
                            {
                                <div class="itemGroupPic">
                                    <img src="@storeProduct.ProductImg" class="card-img-top" alt="...">
                                </div>
                            }
                            <div class="card-body">
                                <div class="card-text">
                                    <div>@storeProduct.ProductName</div>
                                    <p class="description">@storeProduct.ProductDescription</p>
                                    <span>$@storeProduct.UnitPrice</span>
                                </div>
                            </div>
                        </div>
                    </div>
                  }
            </div>
          }
    </div>

    <div class="modal fade" id="cardModal" tabindex="-1" aria-labelledby="exampleModalLabel1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-xl">
            <div class="storeModalContent modal-content">
                <div class="storeModal modal-header">
                    <div class="storeModalBody modal-body">
                        <div class="imgAndClose" v-if="product.ProductImg != null">
                            <div class="imgAndClosePic">
                                <img :src="product.ProductImg">
                            </div>
                        </div>
                        <div class="cardWrap d-flex flex-column">
                            <div class="scroll">
                                <div type="button" data-dismiss="modal">
                                    <span class="crosses" aria-hidden="true">
                                        <i class="far fa-times-circle fa-3x"></i>
                                    </span>
                                </div>

                                <div class="topWrap">
                                    <div class="food p-4">
                                        <h2>{{product.ProductName}}</h2>
                                        <p>{{product.ProductDescription}}</p>
                                    </div>
                                    <div class="accordion" id="accordionStore">
                                        <div v-for="(storeProductOption,index) in product.StoreProductOptions" class="selectedBgc p-4">
                                            <div class="selected d-flex justify-content-between align-items-center font-weight-bold" data-toggle="collapse" :data-target="'#option' + index">
                                                <div class="selectWrap">
                                                    <div class="selectedTitle">
                                                        {{storeProductOption.ProductOptionName}}
                                                        <span v-if="storeProductOption.SelectOption == null" class="text-danger small ml-1">該選項必填</span>
                                                    </div>
                                                </div>
                                                <div class="circleIconDiv">
                                                    <i class="fas fa-chevron-circle-down circleIcon fa-2x"></i>
                                                </div>
                                            </div>
                                            <div :id="'option' + index" data-parent="#accordionStore" class="collapse show">
                                                <label v-for="detail in storeProductOption.ProductOptionDetails" class="d-block py-3">
                                                    <input v-model="storeProductOption.SelectOption" :value="detail.StoreProductOptionDetailId" type="radio" :name="storeProductOption.ProductOptionName" class="d-inline-block mr-2">{{detail.StoreProductOptioinDetailName}}(+${{detail.AddPrice}})
                                                </label>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                                <div class="billTxt">
                                    <p>
                                        [本店免開統一發票] 本商家所提供的商品沒有含有任何依法規應揭露之肉類食材
                                        (上開肉品資訊是由我們所合作之商家合作夥伴所提供。如對上開資訊有任何疑問，請直接與商家合作夥伴聯繫)
                                    </p>
                                </div>
                                <div class="addItemBgC">
                                    <div class="addGroup wrap justify-content-around">
                                        <div class="quantityAddWrap d-flex my-auto">
                                            <i class="fas fa-minus-circle fa-2x" v-on:click="changeAmount(-1)"></i>
                                            <div class="quantity" style="font-size: 20px;">{{product.Quantity}}</div>
                                            <i class="fas fa-plus-circle fa-2x" v-on:click="changeAmount(1)"></i>
                                        </div>
                                        <div class="addToCartWrap">
                                            <button type="button" id="abc" class="btn btn-lg active" v-on:click="addToCart">
                                                <span class="addToCart">
                                                    新增 {{product.Quantity}} 項商品至訂單
                                                </span>
                                                <span class="price">
                                                    ${{sum}}
                                                </span>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


